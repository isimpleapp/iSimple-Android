<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.treelev.isimple.views.TitleControl
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="80dip" android:gravity="center_horizontal" android:layout_below="@+id/title"
                  android:id="@+id/sort_control">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dip" android:layout_weight="1"
                android:background="@android:color/darker_gray">
        </LinearLayout>
        <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/sort_group"
                android:layout_height="0dip" android:layout_weight="1" android:orientation="horizontal"
                android:gravity="center">
            <RadioButton
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:id="@+id/alphabet_sort" android:layout_weight="1" android:text="по алфавиту"/>
            <RadioButton
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_sort" android:layout_weight="1" android:text="по цене"/>
        </RadioGroup>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sort_control">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/list"/>
    </RelativeLayout>
</RelativeLayout>