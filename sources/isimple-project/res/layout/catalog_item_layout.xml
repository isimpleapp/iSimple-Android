<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="135dip"
              android:background="@drawable/product_list_item_selector">
    <LinearLayout
            android:id="@+id/color_item"
            android:orientation="vertical"
            android:layout_width="7dip"
            android:layout_height="match_parent" android:background="@color/product_wine_color">
    </LinearLayout>
    <ImageView
            android:layout_width="75dip"
            android:contentDescription="@string/app_name"
            android:layout_height="wrap_content"
            android:id="@+id/item_image" android:scaleType="fitCenter" android:paddingTop="7dip"
            android:paddingBottom="7dip"/>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginLeft="20dip" android:layout_marginRight="5dip">
        <org.holoeverywhere.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_name" android:textColor="@android:color/black" android:textStyle="bold"
                android:textSize="17sp" android:layout_marginTop="14dip"/>
        <org.holoeverywhere.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_loc_name" android:textColor="@color/product_text_color"
                android:layout_below="@+id/item_name" android:textSize="12sp"
                android:layout_marginTop="2dip"/>
        <org.holoeverywhere.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_category" android:layout_below="@+id/item_loc_name"
                android:textColor="@color/product_category_color" android:textSize="11sp" android:layout_marginTop="3dip"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center_vertical"
                android:layout_alignParentBottom="true" android:layout_marginBottom="13dip">
            <org.holoeverywhere.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_volume" android:textColor="@color/product_volume_color"
                    android:gravity="center_vertical"/>
            <org.holoeverywhere.internal._View
                    android:layout_height="match_parent"
                    android:layout_width="1px" android:background="@color/product_separator_color" android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="-2dip" android:layout_marginTop="-2dip"/>
            <org.holoeverywhere.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_price" android:textColor="@color/product_price_color"
                    android:gravity="center_vertical" android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>