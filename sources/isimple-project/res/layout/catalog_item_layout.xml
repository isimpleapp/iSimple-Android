<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="90dip"
              android:background="@drawable/product_list_item_selector">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="7dip"
            android:layout_height="match_parent" android:background="@color/item_wine_color">
    </LinearLayout>
    <ImageView
            android:layout_width="75dip"
            android:contentDescription="@string/app_name"
            android:layout_height="wrap_content"
            android:id="@+id/item_image" android:scaleType="fitCenter" android:paddingTop="7dip"
            android:paddingBottom="7dip"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginLeft="20dip">
        <org.holoeverywhere.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_name" android:textColor="@android:color/black" android:textStyle="bold"/>
        <org.holoeverywhere.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_loc_name" android:textColor="@color/item_text_color"/>
        <org.holoeverywhere.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_drink_type" android:textColor="@color/item_text_color"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="center_vertical">
            <org.holoeverywhere.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/item_volume" android:textColor="@color/item_volume_color"
                    android:gravity="center_vertical"/>
            <org.holoeverywhere.internal._View
                    android:layout_height="match_parent"
                    android:layout_width="1dip" android:background="@color/item_volume_color" android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip" android:layout_marginTop="3dip"
                    android:layout_marginBottom="3dip"/>
            <org.holoeverywhere.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/item_price" android:textColor="@color/item_price_color"
                    android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>