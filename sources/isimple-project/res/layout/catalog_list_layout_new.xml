<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <android.support.v4.view.BannersViewPager
                        android:id="@+id/banners"
                        android:layout_width="match_parent"
                        android:layout_height="140dp" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/category_wine_butt"
                        style="@style/CatalogSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickCategoryButt"
                        android:text="@string/category_name_wine_single_line" >
                    </org.holoeverywhere.widget.TextView>

                    <org.lucasr.twowayview.TwoWayView
                        android:id="@+id/catalog_wine_two_way_view"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:background="@android:color/white"
                        android:drawSelectorOnTop="false"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/category_spirits_butt"
                        style="@style/CatalogSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickCategoryButt"
                        android:text="@string/category_name_spirits_single_line" >
                    </org.holoeverywhere.widget.TextView>

                    <org.lucasr.twowayview.TwoWayView
                        android:id="@+id/catalog_spirits_two_way_view"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:background="@android:color/white"
                        android:drawSelectorOnTop="false"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/category_sparkling_butt"
                        style="@style/CatalogSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickCategoryButt"
                        android:text="@string/category_name_sparkling_single_line" >
                    </org.holoeverywhere.widget.TextView>

                    <org.lucasr.twowayview.TwoWayView
                        android:id="@+id/catalog_sparkling_two_way_view"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:background="@android:color/white"
                        android:drawSelectorOnTop="false"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/category_porto_heres_butt"
                        style="@style/CatalogSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickCategoryButt"
                        android:text="@string/category_name_porto_heres_single_line" >
                    </org.holoeverywhere.widget.TextView>

                    <org.lucasr.twowayview.TwoWayView
                        android:id="@+id/catalog_porto_heres_two_way_view"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:background="@android:color/white"
                        android:drawSelectorOnTop="false"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/category_sake_butt"
                        style="@style/CatalogSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickCategoryButt"
                        android:text="@string/category_name_sake_single_line" >
                    </org.holoeverywhere.widget.TextView>

                    <org.lucasr.twowayview.TwoWayView
                        android:id="@+id/catalog_sake_two_way_view"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:background="@android:color/white"
                        android:drawSelectorOnTop="false"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/category_water_butt"
                        style="@style/CatalogSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickCategoryButt"
                        android:text="@string/category_name_water_single_line" >
                    </org.holoeverywhere.widget.TextView>

                    <org.lucasr.twowayview.TwoWayView
                        android:id="@+id/catalog_water_two_way_view"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:background="@android:color/white"
                        android:drawSelectorOnTop="false"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <View
                    android:id="@+id/dark_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/category_filter_text" />
            </FrameLayout>
        </ScrollView>
    </FrameLayout>
    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>