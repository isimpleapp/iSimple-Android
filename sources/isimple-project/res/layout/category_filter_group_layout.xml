<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dip">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dip" android:background="@color/category_filter_back"
            android:gravity="center" android:id="@+id/group_name" android:visibility="visible">
        <org.holoeverywhere.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27dip"
                android:textColor="@color/category_filter_text"
                android:text="@string/filter_label"
                android:textStyle="bold" android:paddingRight="8dip"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/filter_label_arrow_down"
                   android:layout_gravity="center_vertical"
                   android:paddingTop="5dip"/>

    </LinearLayout>
    <RelativeLayout
            android:id="@+id/category_type_view"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:visibility="gone">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/red_wine_butt"
                    android:layout_weight="1"
                    android:background="@color/wine_type_red"
                    android:text="@string/wine_type_red"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/white_wine_butt"
                    android:layout_weight="1"
                    android:background="@color/wine_type_white"
                    android:gravity="center"
                    android:text="@string/wine_type_white"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/pink_wine_butt"
                    android:layout_weight="1"
                    android:background="@color/wine_type_pink"
                    android:text="@string/wine_type_pink"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
        </LinearLayout>
        <RadioGroup
                android:id="@+id/check_type_rg"
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:checkedButton="@+id/check_red_wine">
            <RadioButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/check_red_wine"
                    android:layout_weight="1"
                    android:button="@drawable/category_filter_type_selector"
                    android:checked="false"/>
            <RadioButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/check_white_wine"
                    android:layout_weight="1"
                    android:button="@drawable/category_filter_type_selector"/>
            <RadioButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/check_pink_wine"
                    android:layout_weight="1"
                    android:button="@drawable/category_filter_type_selector"/>
        </RadioGroup>
    </RelativeLayout>
</LinearLayout>
