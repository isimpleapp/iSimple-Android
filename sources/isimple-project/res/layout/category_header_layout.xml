<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="80dip" android:gravity="center_horizontal" android:layout_below="@+id/title"
              android:id="@+id/sort_control">
    <org.holoeverywhere.widget.ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filtration_view"
            android:groupIndicator="@null"/>
    <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/sort_group"
            android:layout_height="0dip" android:layout_weight="1" android:orientation="horizontal"
            android:gravity="center">
        <RadioButton
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/alphabet_sort" android:layout_weight="1" android:text="@string/sort_label_alphabet"/>
        <RadioButton
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/price_sort" android:layout_weight="1" android:text="@string/sort_label_price"/>
    </RadioGroup>
</LinearLayout>