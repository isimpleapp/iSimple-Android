<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="80dip" android:gravity="center_horizontal">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip" android:layout_weight="1"
            android:background="@android:color/darker_gray">
    </LinearLayout>
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="0dip" android:layout_weight="1" android:orientation="horizontal"
            android:gravity="center">
        <RadioButton
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton" android:layout_weight="1"/>
        <RadioButton
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1" android:layout_weight="1"/>
    </RadioGroup>
</LinearLayout>