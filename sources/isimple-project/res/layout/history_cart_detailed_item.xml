<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dip"
              android:background="@drawable/product_list_item_selector"
              android:paddingRight="16dip">

    <LinearLayout
        android:id="@+id/contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/date_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:layout_marginBottom="12dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textSize="17sp"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"/>

        <TextView
           android:id="@+id/cart_info"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="6dip"
           android:paddingLeft="8dip"
           android:paddingRight="8dip"
           android:textSize="14sp"
           android:ellipsize="end"
           android:lines="1"
           android:textColor="@color/product_text_color"/>

    </LinearLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_to_shopping_cart_butt"
            android:src="@drawable/shopping_cart_add_ico"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

</RelativeLayout>