<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <CheckBox
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="0.495"
            android:text="@string/lbl_porto"
            android:textColor="@color/product_text_color1"
            android:background="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/chb_porto"
            android:button="@null"/>

    <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="0.01"
            android:background="@android:color/white">

        <View
                android:layout_height="48dip"
                android:layout_width="match_parent"
                android:background="@color/product_text_color1"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <CheckBox
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="0.495"
            android:text="@string/lbl_heres"
            android:textColor="@color/product_text_color1"
            android:background="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/chb_heres"
            android:button="@null"/>


</LinearLayout>