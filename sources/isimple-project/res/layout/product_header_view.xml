<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
        >

    <!--<HorizontalScrollView-->
    <!--android:id="@+id/horizontal_scroll_product"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content">-->
    <LinearLayout
            android:id="@+id/lin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">
            <LinearLayout
                    android:id="@+id/list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <org.holoeverywhere.widget.TextView
                            android:layout_width="fill_parent"
                            android:layout_height="30dip"
                            android:text=""
                            android:id="@+id/title_item"
                            android:background="@color/wine_type_pink"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:height="30dip"
                            android:textStyle="bold"
                            android:textSize="13dip"/>
                    <LinearLayout
                            android:id="@+id/list_layout"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="10dip"
                            android:layout_marginRight="20dip"
                            android:background="@android:color/transparent"
                            android:layout_below="@+id/title_item">
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_manufacturer"
                                android:textColor="@color/product_text_color1"
                                android:layout_marginLeft="20dip"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >
                            <ImageView
                                    android:id="@+id/favourite_image"
                                    android:src="@drawable/product_icon_favorite"
                                    android:layout_height="16dip"
                                    android:layout_width="16dip"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="4dip"
                                    android:layout_marginTop="6dip"/>
                            <org.holoeverywhere.widget.TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/product_name"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold"
                                    android:textSize="18dip"
                                    android:layout_marginTop="5dip"
                                    android:password="false" android:singleLine="false"
                                    android:layout_marginLeft="20dip"/>
                        </LinearLayout>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_localizated_manufacturer"
                                android:textColor="@color/product_text_color2"
                                android:layout_marginTop="5dip"
                                android:layout_marginLeft="20dip"/>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_localizated_name"
                                android:textColor="@color/product_text_color2"
                                android:layout_marginTop="5dip"
                                android:layout_marginLeft="20dip"/>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_item_id"
                                android:textColor="@color/product_text_color3"
                                android:layout_marginTop="5dip" android:layout_marginBottom="5dip"
                                android:layout_marginLeft="20dip"/>
                        <View
                                android:layout_height="1dip"
                                android:layout_width="match_parent"
                                android:background="@android:color/black"
                                android:layout_marginLeft="20dip"/>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dip"
                                android:id="@+id/product_region"
                                android:layout_marginLeft="20dip"/>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:id="@+id/product_sweetness"
                                android:layout_marginLeft="20dip"/>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:id="@+id/product_style"
                                android:layout_marginLeft="20dip"/>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:id="@+id/product_grapes"
                                android:layout_marginLeft="20dip"/>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:id="@+id/product_alcohol"
                                android:layout_marginLeft="20dip"/>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:id="@+id/product_volume"
                                android:layout_marginLeft="20dip"/>
                        <org.holoeverywhere.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:id="@+id/product_year"
                                android:layout_marginLeft="20dip"/>

                        <view android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              class="org.holoeverywhere.widget.TextView" android:id="@+id/retail_price_label"
                              android:layout_marginTop="3dip"
                              android:layout_marginLeft="20dip"/>
                        <View
                                android:layout_height="15dip"
                                android:layout_width="match_parent"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/add_to_shopping_cart_animate"
                            android:textColor="@color/product_price_color"
                            android:layout_width="215dip"
                            android:layout_height="350dip"
                            android:text="asdqw"
                            android:textSize="20sp"
                            android:visibility="gone" android:gravity="center_horizontal|bottom"/>

                    <ImageView
                            android:contentDescription="@string/app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/product_image"
                            android:src="@drawable/product_default_image"
                            android:scaleType="matrix"
                            android:cropToPadding="true"

                            android:adjustViewBounds="false"
                            android:layout_marginLeft="15dip"
                            android:layout_gravity="center_vertical"
                            android:layout_below="@+id/title_item"
                            android:layout_toRightOf="@+id/list_layout"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/list_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    <TextView
                            android:id="@+id/retail_price"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:text="@string/text_for_retail_price"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="10dip"
                            android:layout_marginLeft="20dip"
                            android:layout_alignParentBottom="true"/>

                    <LinearLayout
                            android:id="@+id/linear_for_two_button"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="45dip"
                            android:gravity="center"

                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="2dip"
                            android:layout_marginTop="5dip"
                            android:layout_marginBottom="5dip"
                            android:layout_alignParentBottom="true"
                            android:paddingRight="18dip">
                        <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:layout_marginLeft="3dip"
                                android:layout_marginRight="3dip">
                            <org.holoeverywhere.widget.Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/add_to_shopping_cart_butt"
                                    android:background="@drawable/product_info_shopping_cart_butt_selector"
                                    android:drawableLeft="@drawable/shopping_cart_add_ico"
                                    android:textColor="@color/product_price_color"/>
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/product_price_color"
                                    android:gravity="center" android:visibility="invisible"/>
                        </RelativeLayout>
                        <org.holoeverywhere.widget.Button
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:text="Где купить?"
                                android:id="@+id/shops_butt" android:layout_weight="3"
                                android:background="@drawable/product_info_shopping_cart_butt_selector"
                                android:layout_marginLeft="3dip"
                                android:layout_marginRight="3dip"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dip" android:textColor="@color/product_price_color"
                        android:textSize="20sp" android:text="qweasdqwe" android:gravity="center_vertical"
                        android:layout_marginLeft="85dip" android:visibility="invisible"
                        android:id="@+id/add_to_basket_animate_first_part">
                </TextView>
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
    <!--</HorizontalScrollView>-->
</LinearLayout>