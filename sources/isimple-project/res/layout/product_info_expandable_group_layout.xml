<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/product_expandable_item_back">
    <ImageView
            android:id="@+id/group_arrow"
            android:contentDescription="@string/app_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:src="@drawable/group_item_arrow_collapse"
            android:layout_weight="1"
            android:scaleType="center"/>
    <org.holoeverywhere.widget.TextView
            android:id="@+id/group_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textSize="20dip"
            android:textColor="@color/product_expandable_item_text"
            android:layout_weight="5"
            android:paddingLeft="10dip"
            android:gravity="center_vertical"/>
</LinearLayout>