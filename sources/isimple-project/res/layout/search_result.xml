<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/sort_group"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <org.holoeverywhere.widget.RadioButton
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:id="@+id/alphabet_sort"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/sort_label_alphabet"
                android:gravity="center"
                style="?android:attr/listSeparatorTextViewStyle"
                android:background="@drawable/tab_indicator_sort"
                android:button="@android:color/transparent"
                android:paddingRight="1dip"/>


        <org.holoeverywhere.widget.RadioButton
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:id="@+id/price_sort"
                android:layout_weight="1"
                android:text="@string/sort_label_price"
                android:gravity="center"
                style="?android:attr/listSeparatorTextViewStyle"
                android:background="@drawable/tab_indicator_sort"
                android:checked="false"
                android:button="@android:color/transparent"/>
    </RadioGroup>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@android:id/list" android:listSelector="@drawable/product_list_item_selector"/>
</LinearLayout>