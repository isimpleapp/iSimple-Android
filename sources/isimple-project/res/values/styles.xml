<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="iSimpleStyle" parent="Holo.Theme.Light" >
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionDropDownStyle">@style/CustomSpinner</item>
<!--        <item name="android:spinnerItemStyle">@style/CustomSpinner.SpinnerItem</item> -->
    </style>

    <style name="CustomActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@color/category_butt_back</item>
    </style>

    <style name="CustomSpinner" parent="Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:dropDownSelector">@drawable/list_navigation_selector</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <!--<style name="CustomSpinner.SpinnerItem" parent="android:Widget.Holo.Light.TextView.SpinnerItem">-->
        <!--<item name="android:textColor">@color/select_item_navigation</item>-->
    <!--</style>-->

    <style name="CategoryButtStyle" parent="Holo.Button">
        <item name="android:textColor">@color/category_butt_text_color</item>
        <item name="android:background">@drawable/category_butt_selector</item>
        <item name="android:layout_margin">1dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="TitleBar">
        <item name="android:background">@drawable/main_menu_background_selector</item>
        <item name="android:dropDownSelector">@drawable/abs__list_selector_holo_light</item>
        <item name="android:popupBackground">@drawable/abs__menu_dropdown_panel_holo_light</item>
        <item name="android:dropDownSelector">@drawable/abs__list_selector_holo_dark</item>
        <item name="android:popupBackground">@drawable/abs__menu_dropdown_panel_holo_dark</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:clickable">true</item>
    </style>
</resources>